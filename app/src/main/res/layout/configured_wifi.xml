<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:divider="#ef2e2e"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/configured_wifi_name"
            android:gravity="center_vertical"
            android:text="dummy mandan dummy"
            android:layout_weight="2"
            android:layout_marginLeft="16dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/configured_profile_name"
            android:gravity="center_vertical"
            android:text="dummy dummy dummy"
            android:layout_weight="1"
            android:textColor="#000000" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_delete_button"
            android:gravity="center|center_vertical"
            android:src="@drawable/ic_clear_black_24px"
            android:layout_marginRight="16dp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>


</LinearLayout>
